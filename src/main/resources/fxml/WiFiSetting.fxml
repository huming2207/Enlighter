<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane prefHeight="200" prefWidth="300" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="controllers.WiFiSettingController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="145.0" minWidth="10.0" prefWidth="90.0"/>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="210.0" minWidth="10.0" prefWidth="210.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="45.0" minHeight="10.0" prefHeight="20.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="80.0" minHeight="10.0" prefHeight="58.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="75.0" minHeight="10.0" prefHeight="61.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="57.0" minHeight="10.0" prefHeight="55.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <Label text="Name (SSID):" GridPane.halignment="RIGHT" GridPane.rowIndex="1">
        <GridPane.margin>
          <Insets right="5.0"/>
        </GridPane.margin>
    </Label>
    <Label text="Password:" GridPane.halignment="RIGHT" GridPane.rowIndex="2">
        <GridPane.margin>
          <Insets right="5.0"/>
        </GridPane.margin>
    </Label>
    <TextField GridPane.columnIndex="1" GridPane.rowIndex="1">
        <GridPane.margin>
          <Insets right="10.0"/>
        </GridPane.margin>
    </TextField>
    <TextField GridPane.columnIndex="1" GridPane.rowIndex="2">
        <GridPane.margin>
          <Insets right="10.0"/>
        </GridPane.margin>
    </TextField>
    <Button mnemonicParsing="false" prefHeight="25.0" prefWidth="299.0" text="Save settings &amp; Reboot"
            GridPane.columnSpan="2" GridPane.rowIndex="3">
        <GridPane.margin>
          <Insets left="10.0" right="10.0"/>
        </GridPane.margin>
    </Button>
</GridPane>
